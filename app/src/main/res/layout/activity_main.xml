<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtMsg"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/edtMsg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMsgCurta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/btnMsgCurta"
        app:layout_constraintEnd_toEndOf="@+id/edtMsg"
        app:layout_constraintStart_toStartOf="@+id/edtMsg"
        app:layout_constraintTop_toBottomOf="@+id/edtMsg" />

    <Button
        android:id="@+id/btnMsgLonga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/btnMsgLonga"
        app:layout_constraintEnd_toEndOf="@+id/btnMsgCurta"
        app:layout_constraintStart_toStartOf="@+id/btnMsgCurta"
        app:layout_constraintTop_toBottomOf="@+id/btnMsgCurta" />

    <Button
        android:id="@+id/btnMsgPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/btnMsgPerson"
        app:layout_constraintEnd_toEndOf="@+id/btnMsgLonga"
        app:layout_constraintStart_toStartOf="@+id/btnMsgLonga"
        app:layout_constraintTop_toBottomOf="@+id/btnMsgLonga" />

</androidx.constraintlayout.widget.ConstraintLayout>